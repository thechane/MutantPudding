<Main_Screen>:
    name: 'mainScreen'
    BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.1, 1)
            ToggleButton:
                state: "down"
                group: "orientation"
                text: "odd-r"
                on_press: root.make_odd_r()
            ToggleButton:
                group: "orientation"
                text: "even-r"
                on_press: root.make_even_r()
            ToggleButton:
                group: "orientation"
                text: "odd-q"
                on_press: root.make_odd_q()
            ToggleButton:
                group: "orientation"
                text: "even-q"
                on_press: root.make_even_q()
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.8, 1)
            BoxLayout:
                size_hint: (1, 0.1)
                canvas.after:
                    Color:
                        rgba: 0, 0, 1, 0.35
                    Rectangle:
                        pos: self.pos
                        size: self.size
                ToggleButton:
                    state: "down"
                    group: "orientation"
                    text: "odd-r"
                    on_press: root.make_odd_r()
                ToggleButton:
                    group: "orientation"
                    text: "even-r"
                    on_press: root.make_even_r()
                ToggleButton:
                    group: "orientation"
                    text: "odd-q"
                    on_press: root.make_odd_q()
                ToggleButton:
                    group: "orientation"
                    text: "even-q"
                    on_press: root.make_even_q()
            FloatLayout:
                id: rootFloat
                size_hint: (1, 0.8)
                canvas.after:
                    Color:
                        rgba: 1, 1, 1, 0.35
                    Rectangle:
                        pos: self.pos
                        size: self.size
            BoxLayout:
                size_hint: (1, 0.1)
                ToggleButton:
                    state: "down"
                    group: "orientation"
                    text: "odd-r"
                    on_press: root.make_odd_r()
                ToggleButton:
                    group: "orientation"
                    text: "even-r"
                    on_press: root.make_even_r()
                ToggleButton:
                    group: "orientation"
                    text: "odd-q"
                    on_press: root.make_odd_q()
                ToggleButton:
                    group: "orientation"
                    text: "even-q"
                    on_press: root.make_even_q()
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.1, 1)
            ToggleButton:
                state: "down"
                group: "orientation"
                text: "odd-r"
                on_press: root.make_odd_r()
            ToggleButton:
                group: "orientation"
                text: "even-r"
                on_press: root.make_even_r()
            ToggleButton:
                group: "orientation"
                text: "odd-q"
                on_press: root.make_odd_q()
            ToggleButton:
                group: "orientation"
                text: "even-q"
                on_press: root.make_even_q()